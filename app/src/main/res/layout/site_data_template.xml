<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ttv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Site Name"
                    android:textSize="20sp"
                    android:layout_marginLeft="55dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/ttv_siteId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="siteId"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/ttv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="area"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/ttv_startPatrolTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="startPatrolTime"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/ttv_startEndPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="startEndPoint"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/ttv_endPatrolTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="endPatrolTime"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/ttv_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/ttv_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="max"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView

                    android:id="@+id/ttv_intervalTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="start_delay"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/ttv_start_delay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="start_delay"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
        </ScrollView>


    </android.support.v7.widget.CardView>




</LinearLayout>