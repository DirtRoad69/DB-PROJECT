<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:layout_above="@+id/btn_collect">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ttv_markup_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Site Duration Information"

                />

            <TextView
                android:id="@+id/ttv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:text="Start Time  :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_start_time"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:inputType="none"
                android:focusable="false"
                android:hint="00:00"
                android:layout_toRightOf="@+id/ttv_start_time"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                />

            <TextView
                android:id="@+id/ttv_end_time"
                android:layout_below="@+id/ttv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"

                android:layout_marginLeft="20dp"

                android:textColor="#000"
                android:text="End Time    :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_end_time"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/edt_start_time"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:inputType="none"
                android:gravity="center"
                android:hint="00:00"
                android:focusable="false"
                android:layout_toRightOf="@+id/ttv_start_time"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                />




            <TextView
                android:id="@+id/ttv_min_time"
                android:layout_below="@+id/ttv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"

                android:layout_marginLeft="20dp"

                android:textColor="#000"
                android:text="Minimum Time  :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_min_time"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/edt_end_time"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:inputType="none"
                android:gravity="center"
                android:hint="0"
                android:focusable="false"
                android:layout_toRightOf="@+id/ttv_min_time"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                />


            <TextView
                android:id="@+id/ttv_max_time"
                android:layout_below="@+id/ttv_min_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"

                android:layout_marginLeft="20dp"

                android:textColor="#000"
                android:text="Maximum Time :"
                android:textSize="18dp"
                android:textStyle="bold" />




            <EditText
                android:id="@+id/edt_max_time"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/edt_min_time"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:inputType="none"
                android:gravity="center"
                android:hint="0"
                android:focusable="false"
                android:layout_toRightOf="@+id/ttv_max_time"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                />


            <TextView
                android:id="@+id/ttv_interval_time"
                android:layout_below="@+id/ttv_max_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"

                android:layout_marginLeft="20dp"

                android:textColor="#000"
                android:text="Patrol Interval   :"
                android:textSize="18dp"
                android:textStyle="bold" />




            <EditText
                android:id="@+id/edt_interval_time"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/edt_max_time"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:inputType="none"
                android:gravity="center"
                android:hint="0"
                android:focusable="false"
                android:layout_toRightOf="@+id/ttv_max_time"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                />



            <TextView
                android:id="@+id/ttv_end_count_time"
                android:layout_below="@+id/ttv_interval_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"

                android:layout_marginLeft="20dp"

                android:textColor="#000"
                android:text="Start Delay        :"
                android:textSize="18dp"
                android:textStyle="bold" />




            <EditText
                android:id="@+id/edt_end_count_time"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/edt_interval_time"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:inputType="none"
                android:gravity="center"
                android:hint="0"
                android:focusable="false"
                android:layout_toRightOf="@+id/ttv_max_time"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                />


        </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>



    <Button
        android:id="@+id/btn_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:text="Save"
        android:textColor="#FFF"
        android:textStyle="bold" />

</RelativeLayout>